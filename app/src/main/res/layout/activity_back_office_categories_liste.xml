        android:textSize="22sp"/>

    <Button
        android:id="@+id/btn_liste_categories_gerer_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue5"
        android:textColor="@color/white"
        android:text="Ajouter"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txv_backoffice_liste_categories_title2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_liste_categories_gerer_categories"
