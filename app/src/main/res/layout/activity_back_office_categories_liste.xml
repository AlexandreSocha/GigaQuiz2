<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue4"
    tools:context=".backoffice.BackOfficeCategoriesListeActivity">

    <TextView
        android:id="@+id/txv_backoffice_liste_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back-office"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txv_backoffice_liste_categories_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des catÃ©gories"
        android:layout_marginTop="16dp"
