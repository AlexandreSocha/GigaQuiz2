<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue4"
    tools:context=".backoffice.BackOfficeActivity">

    <TextView
        android:id="@+id/txv_backoffice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back-office"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txv_backoffice_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que voulez-vous faire ?"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txv_backoffice_title"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_marginTop="150dp"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_below="@+id/txv_backoffice_title2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight=".5"
            android:weightSum="1.0">

            <Button
                android:id="@+id/btn_gerer_questions"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:backgroundTint="@color/blue5"
                android:layout_marginRight="4dp"
                android:text="Gérer \nquestions"/>
            <Button
                android:id="@+id/btn_gerer_categories"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:backgroundTint="@color/blue5"
                android:layout_marginLeft="4dp"
                android:text="Gérer \ncatégories"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_margin="0dp"
            android:weightSum="1.0">

            <Button
                android:enabled="false"
                android:id="@+id/btn_gerer_banque_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight=".5"
                android:backgroundTint="@color/blue5"
                android:text="Banque \nd'images"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_gerer_parametres"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:backgroundTint="@color/blue5"
                android:layout_marginLeft="4dp"
                android:text="Paramètres \ngénéraux"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>