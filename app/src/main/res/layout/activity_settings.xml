<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue4"
    tools:context=".backoffice.SettingsActivity">

    <TextView
        android:id="@+id/txv_backoffice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back-office"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txv_backoffice_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paramètres généraux"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txv_backoffice_title"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/container_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txv_backoffice_title2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Pseudo : "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_pseudo"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/container_row_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Mode expert "/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chk_mode_expert"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_btn_save"
        android:layout_below="@+id/container_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_save"
            android:layout_marginTop="100dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Enregistrer"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:backgroundTint="@color/blue5"
            android:textColor="@color/white"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>