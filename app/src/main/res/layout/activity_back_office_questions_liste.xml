<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue4"
    tools:context=".backoffice.BackOfficeQuestionsListeActivity">

    <TextView
        android:id="@+id/txv_backoffice_liste_questions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back-office"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txv_backoffice_liste_questions_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste de questions"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txv_backoffice_liste_questions_title"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btn_liste_questions_gerer_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/blue5"
        android:textColor="@color/white"
        android:layout_below="@+id/txv_backoffice_liste_questions_title2"/>

</RelativeLayout>