<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blue4"
    tools:context=".backoffice.BackOfficeQuestionsListeActivity">

    <TextView
        android:id="@+id/txv_backoffice_liste_questions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back-office"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txv_backoffice_liste_questions_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste de questions"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txv_backoffice_liste_questions_title"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txv_number_items"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_backoffice_liste_questions_title2"
        />

    <Button
        android:id="@+id/btn_liste_questions_gerer_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue5"
        android:textColor="@color/white"
        android:text="Ajouter"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txv_backoffice_liste_questions_title2"/>

    <LinearLayout
        android:id="@+id/actions_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btn_liste_questions_gerer_questions">
        <Spinner
            android:id="@+id/spn_categ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Spinner>
        <Spinner
            android:id="@+id/spn_diffi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvw_categ"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/actions_container_1"/>




</RelativeLayout>